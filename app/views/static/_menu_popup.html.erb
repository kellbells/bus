<div class="modal fade" id="<%= dish.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"><%= dish.plate %></h4>
      </div>
      <%= simple_form_for [dish, dish.order_dishes.new] do |f| %>
        <%= f.hidden_field "dish_id", value: dish.id %>
        <div class="modal-body">
          
            <div class="row">
              <div class="col-sm-4">
                <h3>Main Dish Ingredients</h3>
                  
                    <% dish.ingredients.each do |ingredient| %>
                      <div>
                          <span class=""><%= check_box_tag "order_dish[dish_ingredient][#{ingredient.id}]", '1', ingredient.standard?  %></span>
                          <div class="order-name"><%= ingredient.name %></div>
                      </div>
                      <%#= ingredient.price %>
                    <% end %>
                  
              </div>
              <div class="col-sm-4">
                <h3>Side Dishes</h3>
                <% dish.side_dishes.each do |side_dish| %>
                  <div><%= check_box_tag "order_dish[side_dish][standard]", '1', side_dish.standard?, class: 'side-dish-checkbox', data: {div: "side-dish-#{side_dish.id}-div"}  %> <%= side_dish.name %></div>
                  <div id="side-dish-<%= side_dish.id%>-div" class='side-dish-ingredients-div' style="<%= 'display: none;' unless side_dish.standard? %>">
                    <% side_dish.side_ingredients.each do |side_ingredient| %>
                     
                      <div >
                          <span class=""> &nbsp; <%= check_box_tag "order_dish[side_dish_ingredient][#{side_ingredient.id}]", '1', side_ingredient.standard?  %></span>
                          <div class="order-name"><%= side_ingredient.name %></div>
                      </div>
                      <%#= ingredient.price %>
                    <% end %>
                  </div>
                <% end %>
              </div>
        
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%#= link_to 'order', new_dish_order_dish_path(dish) %>
          <%= f.submit 'Order' %>
        </div>
      <% end %>
    </div>
  </div>
</div>